# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
trim_trailing_whitespace = true

[*.html]
indent_style = space
indent_size = 2
tab_width = 2

[*.{ts,json,js,tsx,jsx}]
indent_style = space
indent_size = 2
tab_width = 2

[*.md]
indent_style = space
indent_size = 2
tab_width = 2

[Dockerfile]
indent_style = space
indent_size = 2
tab_width = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2
tab_width = 2

[*.sql]
indent_style = space
indent_size = 4
tab_width = 4

